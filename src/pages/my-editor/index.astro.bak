---
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
---

<MainGridLayout title="内容编辑器" description="编辑博客文章、日记和相册">
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-6 md:px-9 pt-6 pb-4 relative w-full">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-neutral-900 dark:text-neutral-100 mb-3">
          内容编辑器
        </h1>
        <p id="editor-subtitle" class="text-neutral-600 dark:text-neutral-400">
          创建或编辑内容
        </p>
      </header>

      <!-- 认证状态 -->
      <div class="mb-8 p-4 rounded-xl bg-gradient-to-r from-green-50 to-blue-50 dark:from-green-900/30 dark:to-blue-900/30 border border-green-200 dark:border-green-800 flex items-center justify-between">
        <div>
          <h3 class="font-medium text-lg">GitHub认证状态</h3>
          <p id="auth-status" class="text-sm text-gray-600 dark:text-gray-400">未认证</p>
        </div>
        <button id="auth-btn" class="btn-card h-12 px-4 rounded-lg">
          <span id="auth-btn-text">登录</span>
        </button>
      </div>

      <!-- 加载状态 -->
      <div id="loading-indicator" class="hidden flex justify-center items-center mb-6">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-[var(--primary)]"></div>
        <span class="ml-3 text-neutral-600 dark:text-neutral-400">处理中...</span>
      </div>

      <!-- 消息区域 -->
      <div id="message-area" class="mb-6 hidden">
        <div id="info-message" class="p-4 rounded-lg bg-blue-50 text-blue-800 dark:bg-blue-900/30 dark:text-blue-200 border border-blue-200 dark:border-blue-800"></div>
        <div id="error-message" class="p-4 rounded-lg bg-red-50 text-red-800 dark:bg-red-900/30 dark:text-red-200 border border-red-200 dark:border-red-800 mt-2 hidden"></div>
      </div>

      <!-- 编辑表单 -->
      <form id="content-form">
        <input type="hidden" id="edit-mode" value="">
        <input type="hidden" id="content-type" value="">
        <input type="hidden" id="content-slug" value="">
        <input type="hidden" id="content-path" value="">

        <div id="create-mode-section" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2">
            <div class="space-y-6">
              <div>
                <label for="edit-title" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">标题</label>
                <input
                  type="text"
                  id="edit-title"
                  class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                  placeholder="内容标题"
                >
              </div>

              <div>
                <label for="edit-content" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">内容</label>
                <textarea
                  id="edit-content"
                  rows="25"
                  class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)] font-mono text-sm"
                  placeholder="使用Markdown格式编辑内容..."
                ></textarea>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="card-base p-5">
              <h3 class="font-semibold text-lg mb-4">内容设置</h3>

              <div class="space-y-4">
                <div>
                  <label for="edit-date" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">日期</label>
                  <input
                    type="date"
                    id="edit-date"
                    class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                  >
                </div>

                <div>
                  <label for="edit-description" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">描述</label>
                  <textarea
                    id="edit-description"
                    rows="3"
                    class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                    placeholder="内容描述..."
                  ></textarea>
                </div>

                <div>
                  <label for="edit-tags" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">标签</label>
                  <input
                    type="text"
                    id="edit-tags"
                    class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                    placeholder="用逗号分隔的标签"
                  >
                </div>

                <div id="post-specific-fields" class="space-y-4 hidden">
                  <div>
                    <label for="edit-category" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">分类</label>
                    <input
                      type="text"
                      id="edit-category"
                      class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                      placeholder="内容分类"
                    >
                  </div>

                  <div class="flex items-center">
                    <input type="checkbox" id="edit-draft" class="h-4 w-4 text-[var(--primary)] border-neutral-300 rounded focus:ring-[var(--primary)]">
                    <label for="edit-draft" class="ml-2 text-sm text-neutral-700 dark:text-neutral-300">草稿</label>
                  </div>

                  <div class="flex items-center">
                    <input type="checkbox" id="edit-pinned" class="h-4 w-4 text-[var(--primary)] border-neutral-300 rounded focus:ring-[var(--primary)]">
                    <label for="edit-pinned" class="ml-2 text-sm text-neutral-700 dark:text-neutral-300">置顶</label>
                  </div>
                </div>

                <div id="album-specific-fields" class="space-y-4 hidden">
                  <div>
                    <label for="edit-location" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">位置</label>
                    <input
                      type="text"
                      id="edit-location"
                      class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                      placeholder="拍摄位置"
                    >
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">照片</label>
                    <div id="photos-container" class="space-y-3">
                      <div class="photo-input-group flex items-center gap-3">
                        <input
                          type="text"
                          name="photo-src[]"
                          placeholder="照片URL"
                          class="flex-1 p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                        >
                        <button type="button" class="remove-photo btn-card h-12 px-4 rounded-lg text-red-500">
                          <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                      </div>
                    </div>
                    <button type="button" id="add-photo-btn" class="mt-3 btn-card h-12 px-4 rounded-lg">
                      <i class="fa fa-plus mr-2" aria-hidden="true"></i>添加照片
                    </button>
                  </div>
                </div>

                <div class="pt-4">
                  <button type="button" id="save-content-btn" class="w-full btn-card h-12 rounded-lg">
                    保存内容
                  </button>
                </div>

                <div class="pt-2 text-center">
                  <a href="/content-manager/" class="text-[var(--primary)] hover:text-[var(--primary-dark)] text-sm">
                    ← 返回内容管理器
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div id="edit-mode-section" class="hidden">
          <div class="space-y-6">
            <div>
              <label for="edit-content-simple" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">内容</label>
              <textarea
                id="edit-content-simple"
                rows="30"
                class="w-full p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)] font-mono text-sm"
                placeholder="使用Markdown格式编辑内容..."
              ></textarea>
            </div>

            <div class="flex space-x-4">
              <button type="button" id="save-content-simple-btn" class="btn-card h-12 px-6 rounded-lg">
                完成更新
              </button>
              <button type="button" id="back-to-manager-btn" class="btn-card h-12 px-6 rounded-lg bg-gray-500 hover:bg-gray-600 text-white">
                返回上一页
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</MainGridLayout>

<script>
  // 管理认证状态
  let githubToken = localStorage.getItem('github_access_token') || null;
  
  // 初始内容变量
  let currentContent = '';
  let initialFilePath = '';
  let initialFileType = '';
  let initialFileSlug = '';

  // 更新认证状态显示
  function updateAuthStatus() {
    const authStatus = document.getElementById('auth-status');
    const authBtnText = document.getElementById('auth-btn-text');

    if (githubToken) {
      authStatus.textContent = '已认证';
      authBtnText.textContent = '退出';
    } else {
      authStatus.textContent = '未认证';
      authBtnText.textContent = '登录';
    }
  }

  // 显示信息
  function showMessage(message, type = 'info') {
    const messageArea = document.getElementById('message-area');
    const infoMessage = document.getElementById('info-message');
    const errorMessage = document.getElementById('error-message');
    
    messageArea.classList.remove('hidden');
    
    if (type === 'info') {
      infoMessage.textContent = message;
      infoMessage.classList.remove('hidden');
      errorMessage.classList.add('hidden');
    } else if (type === 'error') {
      errorMessage.textContent = message;
      errorMessage.classList.remove('hidden');
      infoMessage.classList.add('hidden');
    }
  }

  // 隐藏消息
  function hideMessage() {
    document.getElementById('message-area').classList.add('hidden');
  }

  // 显示加载指示器
  function showLoading() {
    document.getElementById('loading-indicator').classList.remove('hidden');
  }

  // 隐藏加载指示器
  function hideLoading() {
    document.getElementById('loading-indicator').classList.add('hidden');
  }

  // 认证按钮事件
  document.getElementById('auth-btn').addEventListener('click', function() {
    if (githubToken) {
      // 如果已认证，清除令牌
      localStorage.removeItem('github_access_token');
      githubToken = null;
    } else {
      // 如果未认证，请求令牌
      const token = prompt('请输入您的GitHub Personal Access Token:');
      if (token) {
        localStorage.setItem('github_access_token', token);
        githubToken = token;
      }
    }
    updateAuthStatus();
    hideMessage();
  });

  // 添加照片输入框
  document.getElementById('add-photo-btn').addEventListener('click', function() {
    const container = document.getElementById('photos-container');
    const inputGroup = document.createElement('div');
    inputGroup.className = 'photo-input-group flex items-center gap-3';
    inputGroup.innerHTML = 
      '<input ' +
        'type="text" ' +
        'name="photo-src[]" ' +
        'placeholder="照片URL" ' +
        'class="flex-1 p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]" ' +
      '/> ' +
      '<button type="button" class="remove-photo btn-card h-12 px-4 rounded-lg text-red-500"> ' +
        '<i class="fa fa-trash" aria-hidden="true"></i> ' +
      '</button>';
    container.appendChild(inputGroup);
  });

  // 删除照片输入框
  document.addEventListener('click', function(e) {
    if (e.target.closest('.remove-photo')) {
      e.target.closest('.photo-input-group').remove();
    }
  });

  // 解析Frontmatter的辅助函数
  function parseFrontmatter(content) {
    const lines = content.split('\\n');
    let frontmatterStart = -1;
    let frontmatterEnd = -1;

    // 找到Frontmatter边界（---）
    for (let i = 0; i < lines.length; i++) {
      if (lines[i].trim() === '---') {
        if (frontmatterStart === -1) {
          frontmatterStart = i;
        } else {
          frontmatterEnd = i;
          break;
        }
      }
    }

    if (frontmatterStart === -1 || frontmatterEnd === -1) {
      return { metadata: {}, content: content };
    }

    // 提取Frontmatter内容
    const frontmatterLines = lines.slice(frontmatterStart + 1, frontmatterEnd);
    const frontmatterText = frontmatterLines.join('\\n');

    // 解析Frontmatter
    const metadata = {};
    const fmLines = frontmatterText.split('\\n');
    
    for (const line of fmLines) {
      if (!line.trim() || !line.includes(':')) continue;
      
      const colonIndex = line.indexOf(':');
      const key = line.substring(0, colonIndex).trim();
      let value = line.substring(colonIndex + 1).trim();
      
      // 移除首尾引号
      if ((value.startsWith('"') && value.endsWith('"')) || 
          (value.startsWith("'") && value.endsWith("'"))) {
        value = value.substring(1, value.length - 1);
      }
      
      // 处理数组（标签等）
      if (value.startsWith('[') && value.endsWith(']')) {
        const arrayContent = value.substring(1, value.length - 1);
        value = arrayContent.split(',').map(item => 
          item.trim().replace(/"/g, '').replace(/'/g, '')
        ).filter(item => item.length > 0);
      }
      
      // 处理布尔值
      if (value === 'true') value = true;
      else if (value === 'false') value = false;
      
      metadata[key] = value;
    }

    // 提取内容正文
    const contentLines = lines.slice(frontmatterEnd + 1);
    const contentBody = contentLines.join('\\n');

    return { metadata, content: contentBody };
  }

  // 生成Frontmatter
  function generateFrontmatter(metadata) {
    const lines = ['---'];
    for (const [key, value] of Object.entries(metadata)) {
      if (Array.isArray(value)) {
        lines.push(key + ': [' + value.map(v => '"' + v + '"').join(', ') + ']');
      } else if (typeof value === 'boolean') {
        lines.push(key + ': ' + value);
      } else {
        lines.push(key + ': "' + (value || '') + '"');
      }
    }
    lines.push('---', '');
    return lines.join('\\n');
  }

  // 显示特定类型的字段
  function showSpecificFields(contentType) {
    // 隐藏所有特定字段组
    document.getElementById('post-specific-fields').classList.add('hidden');
    document.getElementById('album-specific-fields').classList.add('hidden');
    
    // 显示对应类型的字段组
    if (contentType === 'post' || contentType === 'diary') {
      document.getElementById('post-specific-fields').classList.remove('hidden');
    } else if (contentType === 'album') {
      document.getElementById('album-specific-fields').classList.remove('hidden');
    }

    // 更新页面副标题
    const subtitle = document.getElementById('editor-subtitle');
    if (contentType === 'post') {
      subtitle.textContent = '编辑文章';
    } else if (contentType === 'diary') {
      subtitle.textContent = '编辑日记';
    } else if (contentType === 'album') {
      subtitle.textContent = '编辑相册';
    } else {
      subtitle.textContent = '编辑内容';
    }
  }

  // 页面加载时初始化
  document.addEventListener('DOMContentLoaded', function() {
    updateAuthStatus();

    // 从URL参数或本地存储获取编辑信息
    const urlParams = new URLSearchParams(window.location.search);
    const editType = urlParams.get('type');

    if (editType) {
      showSpecificFields(editType);
      document.getElementById('content-type').value = editType;
    }

    // 设置默认日期
    document.getElementById('edit-date').value = new Date().toISOString().split('T')[0];

    // 如果是从内容管理器跳转过来的，加载编辑内容
    const editingType = localStorage.getItem('editingType');
    const editingSlug = localStorage.getItem('editingSlug');
    const editingFilePath = localStorage.getItem('editingFilePath');

    if (editingType && editingSlug && editingFilePath && githubToken) {
      loadContentFromGitHub(editingType, editingSlug, editingFilePath);

      // 清除本地存储中的编辑信息
      localStorage.removeItem('editingType');
      localStorage.removeItem('editingSlug');
      localStorage.removeItem('editingFilePath');
    }
  });

  // 从GitHub加载内容进行编辑
  async function loadContentFromGitHub(type, slug, filePath) {
    if (!githubToken) {
      showMessage('请先进行GitHub认证', 'error');
      return;
    }

    showLoading();

    try {
      // 获取文件内容
      const response = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
        headers: {
          'Authorization': 'Bearer ' + githubToken
        }
      });

      if (!response.ok) {
        if (response.status === 401 || response.status === 403) {
          throw new Error('GitHub认证令牌无效或权限不足，请检查您的令牌');
        }
        throw new Error('获取文件内容失败: ' + response.status + ' ' + response.statusText);
      }

      const fileData = await response.json();
      // 正确解码Base64内容，支持UTF-8编码
      const binaryString = atob(fileData.content);
      const bytes = new Uint8Array(binaryString.length);
      for (let i = 0; i < binaryString.length; i++) {
          bytes[i] = binaryString.charCodeAt(i);
      }
      const content = new TextDecoder('utf-8').decode(bytes);
      const { metadata, content: contentBody } = parseFrontmatter(content);

      // 设置表单隐藏字段
      document.getElementById('edit-mode').value = 'edit';
      document.getElementById('content-type').value = type;
      document.getElementById('content-slug').value = slug;
      document.getElementById('content-path').value = filePath;

      // 启用简化编辑界面
      document.getElementById('create-mode-section').classList.add('hidden');
      document.getElementById('edit-mode-section').classList.remove('hidden');

      // 填充简化编辑器的内容（完整内容包括Frontmatter）
      document.getElementById('edit-content-simple').value = content;

      hideLoading();
      showMessage('内容加载成功');
    } catch (error) {
      hideLoading();
      console.error('加载内容时出错:', error);
      showMessage('加载内容失败: ' + error.message, 'error');
    }
  }

  // 从GitHub加载内容进行编辑
  async function loadContentFromGitHub(type, slug, filePath) {
    if (!githubToken) {
      showMessage('请先进行GitHub认证', 'error');
      return;
    }

    showLoading();

    try {
      // 获取文件内容
      const response = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
        headers: {
          'Authorization': 'Bearer ' + githubToken
        }
      });

      if (!response.ok) {
        if (response.status === 401 || response.status === 403) {
          throw new Error('GitHub认证令牌无效或权限不足，请检查您的令牌');
        }
        throw new Error('获取文件内容失败: ' + response.status + ' ' + response.statusText);
      }

      const fileData = await response.json();
      // 正确解码Base64内容，支持UTF-8编码
      const binaryString = atob(fileData.content);
      const bytes = new Uint8Array(binaryString.length);
      for (let i = 0; i < binaryString.length; i++) {
          bytes[i] = binaryString.charCodeAt(i);
      }
      const content = new TextDecoder('utf-8').decode(bytes);
      const { metadata, content: contentBody } = parseFrontmatter(content);

      // 填充表单
      document.getElementById('edit-title').value = metadata.title || '';
      document.getElementById('edit-content').value = contentBody || '';
      document.getElementById('edit-date').value = metadata.published || metadata.date || new Date().toISOString().split('T')[0];
      document.getElementById('edit-description').value = metadata.description || '';
      document.getElementById('edit-tags').value = Array.isArray(metadata.tags) ? metadata.tags.join(', ') : (metadata.tags || '');

      // 设置表单隐藏字段
      document.getElementById('edit-mode').value = 'edit';
      document.getElementById('content-type').value = type;
      document.getElementById('content-slug').value = slug;
      document.getElementById('content-path').value = filePath;

      // 填充特定类型字段
      if (type === 'post') {
        document.getElementById('edit-category').value = metadata.category || '';
        document.getElementById('edit-draft').checked = metadata.draft === true;
        document.getElementById('edit-pinned').checked = metadata.pinned === true;
      } else if (type === 'album') {
        document.getElementById('edit-location').value = metadata.location || '';
        
        // 填充照片URL（如果有）
        if (metadata.photos && Array.isArray(metadata.photos)) {
          const container = document.getElementById('photos-container');
          container.innerHTML = ''; // 清空默认输入框
          
          metadata.photos.forEach((photo, index) => {
            const inputGroup = document.createElement('div');
            inputGroup.className = 'photo-input-group flex items-center gap-3';
            inputGroup.innerHTML = 
              '<input ' +
                'type="text" ' +
                'name="photo-src[]" ' +
                'value="' + (photo.src || '') + '" ' +
                'placeholder="照片URL" ' +
                'class="flex-1 p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]" ' +
              '/> ' +
              '<button type="button" class="remove-photo btn-card h-12 px-4 rounded-lg text-red-500"> ' +
                '<i class="fa fa-trash" aria-hidden="true"></i> ' +
              '</button>';
            container.appendChild(inputGroup);
          });
          
          // 添加一个空的输入框用于添加新的照片
          const emptyInputGroup = document.createElement('div');
          emptyInputGroup.className = 'photo-input-group flex items-center gap-3';
          emptyInputGroup.innerHTML = 
            '<input ' +
              'type="text" ' +
              'name="photo-src[]" ' +
              'placeholder="照片URL" ' +
              'class="flex-1 p-3 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]" ' +
            '/> ' +
            '<button type="button" class="remove-photo btn-card h-12 px-4 rounded-lg text-red-500"> ' +
              '<i class="fa fa-trash" aria-hidden="true"></i> ' +
            '</button>';
          container.appendChild(emptyInputGroup);
        }
      }


  // 保存内容到GitHub
  document.getElementById('save-content-btn').addEventListener('click', async function() {
    if (!githubToken) {
      showMessage('请先进行GitHub认证', 'error');
      return;
    }

    const mode = document.getElementById('edit-mode').value;
    const contentType = document.getElementById('content-type').value;
    const contentSlug = document.getElementById('content-slug').value;
    const filePath = document.getElementById('content-path').value;
    
    const title = document.getElementById('edit-title').value;
    const contentBody = document.getElementById('edit-content').value;
    const date = document.getElementById('edit-date').value;
    const description = document.getElementById('edit-description').value;
    const tags = document.getElementById('edit-tags').value.split(',').map(tag => tag.trim()).filter(tag => tag.length > 0);
    
    if (!title || !contentBody) {
      showMessage('标题和内容不能为空', 'error');
      return;
    }

    // 构建metadata对象
    const metadata = {
      title: title,
      date: date
    };

    if (description) metadata.description = description;
    if (tags.length > 0) metadata.tags = tags;

    // 添加特定类型字段
    if (contentType === 'post') {
      metadata.published = date;
      const category = document.getElementById('edit-category').value;
      if (category) metadata.category = category;
      metadata.draft = document.getElementById('edit-draft').checked;
      metadata.pinned = document.getElementById('edit-pinned').checked;
    } else if (contentType === 'album') {
      const location = document.getElementById('edit-location').value;
      if (location) metadata.location = location;
      
      // 获取照片URL
      const photoInputs = document.querySelectorAll('#photos-container input[name="photo-src[]"]');
      const photos = [];
      photoInputs.forEach(input => {
        if (input.value.trim() !== '') {
          photos.push({ src: input.value.trim() });
        }
      });
      if (photos.length > 0) metadata.photos = photos;
    }

    // 生成Frontmatter和完整内容
    const frontmatter = generateFrontmatter(metadata);
    const fullContent = frontmatter + contentBody;

    showLoading();

    try {
      if (mode === 'edit' && filePath) {
        // 编辑模式：更新现有文件
        const getFileResponse = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
          headers: {
            'Authorization': 'Bearer ' + githubToken
          }
        });

        if (!getFileResponse.ok) {
          if (getFileResponse.status === 401 || getFileResponse.status === 403) {
            throw new Error('GitHub认证令牌无效或权限不足');
          }
          throw new Error('获取文件信息失败: ' + getFileResponse.status);
        }

        const fileData = await getFileResponse.json();

        const response = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + githubToken,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            message: '更新 ' + filePath + ' [通过内容编辑器]',
            // 正确编码内容，支持UTF-8编码
            content: (() => {
              const uint8Array = new TextEncoder().encode(fullContent);
              let binary = '';
              for (let i = 0; i < uint8Array.length; i++) {
                binary += String.fromCharCode(uint8Array[i]);
              }
              return btoa(binary);
            })(),
            sha: fileData.sha
          })
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || '更新失败');
        }

        showMessage('内容更新成功！', 'info');
      } else {
        // 创建模式：创建新文件
        let newFilePath;
        let fileName;
        if (contentType === 'post' || contentType === 'diary') {
          const cleanTitle = title.toLowerCase().replace(/[^a-z0-9]/g, '-').replace(/-+/g, '-');
          fileName = date + '-' + cleanTitle + '.md';
          newFilePath = 'src/content/' + contentType + 's/' + fileName;
        } else { // album
          const cleanTitle = title.toLowerCase().replace(/[^a-z0-9]/g, '-').replace(/-+/g, '-');
          fileName = cleanTitle + '.md';
          newFilePath = 'src/content/albums/' + fileName;
        }

        const response = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + newFilePath, {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + githubToken,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            message: '创建 ' + newFilePath + ' [通过内容编辑器]',
            // 正确编码内容，支持UTF-8编码
            content: (() => {
              const uint8Array = new TextEncoder().encode(fullContent);
              let binary = '';
              for (let i = 0; i < uint8Array.length; i++) {
                binary += String.fromCharCode(uint8Array[i]);
              }
              return btoa(binary);
            })()
          })
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || '创建失败');
        }

        // 设置为编辑模式以便后续更新
        document.getElementById('edit-mode').value = 'edit';
        document.getElementById('content-slug').value = newFilePath.split('/').pop().replace('.md', '');
        document.getElementById('content-path').value = newFilePath;

        showMessage('内容创建成功！', 'info');
      }
    } catch (error) {
      console.error('保存内容时出错:', error);
      showMessage('保存失败: ' + error.message, 'error');
    } finally {
      hideLoading();
    }
  });

  // 简化编辑模式的保存功能
  if (document.getElementById('save-content-simple-btn')) {
    document.getElementById('save-content-simple-btn').addEventListener('click', async function() {
      if (!githubToken) {
        showMessage('请先进行GitHub认证', 'error');
        return;
      }

      const mode = document.getElementById('edit-mode').value;
      const filePath = document.getElementById('content-path').value;

      if (mode !== 'edit' || !filePath) {
        showMessage('无效的编辑模式', 'error');
        return;
      }

      const fullContent = document.getElementById('edit-content-simple').value;

      if (!fullContent) {
        showMessage('内容不能为空', 'error');
        return;
      }

      showLoading();

      try {
        // 获取当前文件的SHA值（用于更新现有文件）
        const getFileResponse = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
          headers: {
            'Authorization': 'Bearer ' + githubToken
          }
        });

        if (!getFileResponse.ok) {
          if (getFileResponse.status === 401 || getFileResponse.status === 403) {
            throw new Error('GitHub认证令牌无效或权限不足');
          }
          throw new Error('获取文件信息失败: ' + getFileResponse.status);
        }

        const fileData = await getFileResponse.json();

        // 提交更新
        const response = await fetch('https://api.github.com/repos/Doulor/Blog/contents/' + filePath, {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + githubToken,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            message: '更新 ' + filePath + ' [通过内容编辑器-简化模式]',
            // 正确编码内容，支持UTF-8编码
            content: (function() {
              const uint8Array = new TextEncoder().encode(fullContent);
              let binary = '';
              for (let i = 0; i < uint8Array.length; i++) {
                binary += String.fromCharCode(uint8Array[i]);
              }
              return btoa(binary);
            })(),
            sha: fileData.sha
          })
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || '更新失败');
        }

        showMessage('内容更新成功！', 'info');

        // 可选：延迟后返回管理器页面
        setTimeout(() => {
          window.location.href = '/content-manager/';
        }, 1500);
      } catch (error) {
        console.error('保存内容时出错:', error);
        showMessage('保存失败: ' + error.message, 'error');
      } finally {
        hideLoading();
      }
    });
  }

  // 返回管理器按钮事件
  if (document.getElementById('back-to-manager-btn')) {
    document.getElementById('back-to-manager-btn').addEventListener('click', function() {
      window.location.href = '/content-manager/';
    });
  }
</script>

